{
	"name": "react-use-sse",
	"description": "React hook for real-time updates with SSE. Plug in, stream on. ⚡️",
	"version": "0.0.1",
	"author": "StyleShit",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/StyleShit/react-use-sse"
	},
	"type": "module",
	"main": "dist/index.cjs",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./package.json": "./package.json"
	},
	"files": [
		"README.md",
		"CHANGELOG.md",
		"/dist",
		"/src",
		"!**/__tests__"
	],
	"scripts": {
		"dev": "concurrently -n client,server -c magenta,blue 'npm run dev:client' 'npm run dev:server'",
		"dev:client": "vite",
		"dev:server": "tsx watch ./demo/server/index.ts",
		"test": "vitest",
		"test:coverage": "vitest run --coverage",
		"lint": "concurrently -n eslint,tsc -c magenta,blue 'eslint ./' 'tsc'",
		"format": "prettier --write ./",
		"format:check": "prettier --check ./",
		"build": "tsup src/index.ts --format cjs,esm --dts",
		"release": "npm run build && changeset publish"
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.7",
		"@eslint/js": "^9.9.0",
		"@testing-library/dom": "^10.4.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.3.0",
		"@types/eslint__js": "^8.42.3",
		"@types/node": "^22.4.1",
		"@types/react": "^19.1.8",
		"@types/react-dom": "^19.1.6",
		"@vitejs/plugin-react": "^4.5.2",
		"@vitest/coverage-v8": "^2.0.5",
		"concurrently": "^8.2.2",
		"eslint": "^9.9.0",
		"eslint-plugin-react-hooks": "^5.2.0",
		"globals": "^15.9.0",
		"jsdom": "^26.1.0",
		"prettier": "^3.3.3",
		"react-dom": "^19.1.0",
		"tsup": "^8.2.4",
		"tsx": "^4.20.3",
		"typescript": "^5.5.4",
		"typescript-eslint": "^8.1.0",
		"vite": "^6.3.5",
		"vitest": "^2.0.5"
	},
	"peerDependencies": {
		"react": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0"
	}
}
